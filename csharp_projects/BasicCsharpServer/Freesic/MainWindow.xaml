<Window x:Class="Freesic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Freesic"
        mc:Ignorable="d"
        Title="Freesic" Height="450" Width="800">
    <Grid>
        <TextBlock Margin="0,0,250,415">Input:</TextBlock>
        <TextBox Name="inputBox" KeyDown="ReceiveInput" Margin="0,24,250,0" VerticalAlignment="Top" Height="188"></TextBox>
        <TextBlock Margin="0,217,250,200" Text="Output:"/>
        <ListBox Name="outputWindow" Margin="0,234,250,0" Foreground="White" Background="Black">
        </ListBox>
        <ListBox Name="testBox" MouseDoubleClick="TestBox_MouseDoubleClick" Width="250" HorizontalAlignment="Right" Margin="0,0,0,20">
        </ListBox>
        <Slider Name="volumeSlider" Drop="volumeSlider_Drop" HorizontalAlignment="Right" Margin="550,400,0,0" VerticalAlignment="Bottom" Width="245" Height="20"/>
    </Grid>
</Window>
